<div class="topbar">
  <button class="sidebar-toggle" onclick="toggleSidebar()">☰</button>
</div>
<aside class="sidebar" id="sidebar">
  <div class="sidebar-container">
    <div class="logo-container">
      <%= image_tag "logo.svg", class: "logo"%>
      <%= image_tag "title.svg", class: "title" %>
    </div>
    <% if current_user.present? %>
      <% perm_service = PermissionService.new(current_user) %>
      <!-- Navigation -->
      <nav class="nav-menu">
        <ul>
          <% if current_user && perm_service.can_view?("news") %>
            <li class="nav-item">
              <%= link_to "/news/index", class: "nav-link" do %>
                <%= image_tag "news.svg", class: "icon"%> 
                <span>ข่าวสาร</span>
              <% end %>
            </li>
            <% if current_user && perm_service.can_create?("news") %>
              <li class="nav-item">
                <%= link_to "/news/new", class: "nav-link" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512"><path d="..."/></svg>
                  <span>สร้างข่าวสาร</span>
                <% end %>
              </li>
            <% end %>
          <% end %>
          <% if current_user && perm_service.can_view?("advisor_group") %>
            <li class="nav-item">
              <%= link_to "/advisors/index", class: "nav-link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" height="20" width="25" viewBox="0 0 640 512"><path d="..."/></svg>
                <span>อาจารย์ที่ปรึกษา</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "/advisors/detail_group", class: "nav-link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" height="20" width="17.5" viewBox="0 0 448 512"><path d="..."/></svg>
                <span>สมาชิก</span>
              <% end %>
            </li>
            <% if current_user && perm_service.can_create?("advisor_group") %>
              <li class="nav-item">
                <%= link_to "/advisors/new", class: "nav-link" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" height="20" width="25" viewBox="0 0 640 512"><path d="..."/></svg>
                  <span>สร้างกลุ่ม</span>
                <% end %>
              </li>
            <% end %>
          <% end %>
          <li class="nav-item">
            <%= link_to "/reports/index", class: "nav-link" do %>
              <%= image_tag "report.svg", class: "icon"%> 
              <span>รูปแบบรายงาน</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "/students/index", class: "nav-link" do %>
              <svg xmlns="http://www.w3.org/2000/svg" height="20" width="25" viewBox="0 0 640 512"><path d="..."/></svg>
              <span>นักเรียน</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "/roles", class: "nav-link" do %>
              <svg xmlns="http://www.w3.org/2000/svg" height="20" width="22.5" viewBox="0 0 576 512"><path d="..."/></svg>
              <span>roles</span>
            <% end %>
          </li>
          <% if perm_service.can_view?("seasons") %>
            <li class="nav-item">
              <%= link_to "/seasons", class: "nav-link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512"><path d="..."/></svg>
                <span>seasons</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
    <div class="user-profile">
      <div class="user-info">
        <p class="user-name"><%= current_user.name %></p>
        <p class="user-role"><%= current_user.role&.name || "-" %></p>
      </div>
      <%= link_to "↗", destroy_user_session_path, method: :delete ,class: "profile-link" %>
    </div>
  <% end %>
</aside>

<script>
  function toggleSidebar() {
    const sidebar = document.getElementById("sidebar");
    sidebar.classList.toggle("open");
  }
</script>
