                <% if ["ผู้ดูแลระบบ", "ผู้ประสารงาน", "อาจารย์"].include?(role_name) %>
                  <li><%= link_to "สมาชิก", "/advisors/detail_group", class: "nav-link #{'active' if current_path == '/advisors/detail_group'}" %></li>
