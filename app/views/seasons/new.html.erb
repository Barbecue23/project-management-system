<%= form_with model: @seasons, url: seasons_path, method: :post, local: true do |f| %>
    <div>
        <label>Seasons Name</label>
        <%= f.text_field :season_name %>
    </div>

    <div>
        <label>รอบที่จะเริ่ม</label>
    <%= f.select :year, (((Time.current.year-1)+543)..((Time.current.year-1)+553)).to_a, { prompt: "เลือกปี พ.ศ." }, name: 'season[year]', class: "form-control" %>
    <%= f.select :term, [[1, 1], [2, 2], [3, 3]], { prompt: "เลือกเทอม" }, name: 'season[term]', class: "form-control" %>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label>Start Date</label>
            <%= f.date_field :start_date, class: "form-control date-picker" %>
        </div>
        <div class="form-group">
            <label>End Date</label>
            <%= f.date_field :end_date, class: "form-control date-picker" %>
        </div>
    </div>
    <div>
        <%= f.submit "+สร้าง", class: "btn-create-news" %>
    </div>
<% end %>
