<%= form_with model: @record,url: report_update_path , local: true do |form| %>
  <div>
    <%= form.label :record_type, "ประเภท" %>
    <%= form.select :record_type, Record.record_types.keys.map { |t| [t.humanize, t] }, prompt: "เลือกประเภท" %>
  </div>

  <div>
    <%= form.label :title, "ชื่อเรื่อง" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :student_name, "ชื่อนักศึกษา" %>
    <%= form.text_field :student_name %>
  </div>

  <div>
    <%= form.label :year, "ปี" %>
    <%= form.text_field :year %>
  </div>

  <div>
    <%= form.label :category, "หมวดหมู่" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :file, "แนบไฟล์" %>
    <%= form.file_field :file %>
    <% if @record.file.attached? %>
      <p>ไฟล์เดิม: <%= link_to @record.file.filename, rails_blob_path(@record.file, disposition: "attachment") %></p>
    <% end %>
  </div>

  <%= form.submit %>
<% end %>
