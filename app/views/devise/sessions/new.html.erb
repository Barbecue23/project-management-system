<div class="login-wrapper">
  <div class="login-container">

    <!-- โลโก้หรือภาพประกอบ -->
    <div class="login-illustration">
      <%= image_tag "logo.svg", class: "login-logo" %>
    </div>

    <!-- ฟอร์มล็อกอิน -->
    <div class="login-form">
      <h2 class="login-title">Welcome Back :)</h2>
      <p class="login-subtext">Please login with your email and password</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <% if resource.errors[:email].any? %>
      <div class="field-error"><%= resource.errors[:email].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    <% if resource.errors[:password].any? %>
      <div class="field-error"><%= resource.errors[:password].first %></div>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group checkbox-label">
      <%= f.check_box :remember_me, {}, '1', '0' %>
      <label style="margin: 0;">Remember me</label>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "เข้าสู่ระบบ", class: "btn btn-primary full-width" %>
  </div>

  <div class="auth-links">
    <%= link_to "ลืมรหัสผ่าน?", new_password_path(resource_name), class: "btn btn-secondary full-width" %>
    <%= link_to "สมัครสมาชิก", new_registration_path(resource_name), class: "btn btn-secondary full-width" %>
  </div>
<% end %>




    </div>
  </div>
</div>
