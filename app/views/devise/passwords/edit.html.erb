<div class="login-wrapper">
  <div class="login-container">

    <div class="login-form">
      <h2 class="login-title">เปลี่ยนรหัสผ่านใหม่</h2>
      <p class="login-subtext">กรอกรหัสผ่านใหม่ของคุณเพื่อรีเซ็ตบัญชี</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "รหัสผ่านใหม่", class: "form-label" %>
          <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> ตัวอักษรขึ้นไป)</small>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors[:password].any? %>
            <div class="field-error"><%= resource.errors[:password].first %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "ยืนยันรหัสผ่านใหม่", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <% if resource.errors[:password_confirmation].any? %>
            <div class="field-error"><%= resource.errors[:password_confirmation].first %></div>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.submit "ยืนยันการเปลี่ยนรหัสผ่าน", class: "btn btn-primary full-width" %>
        </div>
      <% end %>

      <div class="auth-links">
        <%= link_to "กลับสู่หน้าเข้าสู่ระบบ", new_session_path(resource_name), class: "btn btn-secondary full-width" %>
      </div>
    </div>
    
  </div>
</div>
