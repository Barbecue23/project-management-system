<div class="login-wrapper">
  <div class="login-container">

    <!-- โลโก้/ภาพประกอบ -->
    <div class="login-illustration">
      <%= image_tag "logo.svg", class: "login-logo" %>
    </div>

    <!-- ฟอร์มลืมรหัสผ่าน -->
    <div class="login-form">
      <h2 class="login-title">ลืมรหัสผ่าน?</h2>
      <p class="login-subtext">กรอกอีเมลของคุณเพื่อรับลิงก์รีเซ็ตรหัสผ่าน</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <% if resource.errors[:email].any? %>
          <div class="field-error"><%= resource.errors[:email].first %></div>
        <% end %>
      </div>


        <div class="form-actions">
          <%= f.submit "ส่งลิงก์รีเซ็ตรหัสผ่าน", class: "btn btn-primary full-width" %>
        </div>
        <div class="auth-links">
          <%= link_to "เข้าสู่ระบบ", new_session_path(resource_name), class: "btn btn-secondary full-width" %>
          <%= link_to "สมัครสมาชิก", new_registration_path(resource_name), class: "btn btn-secondary full-width" %>
        </div>
      <% end %>


    </div>

  </div>
</div>
