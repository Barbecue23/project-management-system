<h1>Roles#index</h1>
<p>Find me in app/views/roles/index.html.erb</p>

<%= link_to 'New Role', new_role_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Users</th>
    <th>Permissions</th>
    <th>Actions</th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.users.count %></td>
      <td><%= role.permissions.count %></td>
      <td><%= link_to 'Edit', edit_role_path(id:role.id) %></td>
    </tr>
  <% end %>
</table>
